---
// src/components/Header.astro

import { Image } from 'astro:assets'
import logoImage from '../../assets/images/elements/SVG/LOGO-COREFIBRA-CABECALHO.svg'
import iconeSeta from '../../assets/images/elements/SVG/SETA-VERDE.svg'
import './Header.css'

const links = [
  { href: '#home', label: 'Home' },
  { href: '#planos', label: 'Serviços' },
  { href: '#sobre', label: 'Sobre' },
  { href: '#contact-form', label: 'Contato' },
]
---

<header class="header">
  <a href="/" class="logo-link">
    <Image
      src={logoImage}
      alt="Logo Core Fibra"
      width={200}
      height={20}
      class="logo-image"
    />
  </a>

  <div aria-hidden="true"></div>

  <nav class="nav">
    {
      links.map((link) => (
        <a href={link.href} class="nav-link">
          {link.label}
        </a>
      ))
    }
  </nav>

  <div aria-hidden="true"></div>

  <a class="cta-button custom-font" href="#contact-form">
    FALE COM UM ESPECIALISTA
    <Image
      src={iconeSeta}
      alt="Ícone de seta"
      width={20}
      height={20}
      class="cta-icon"
    />
  </a>
</header>
