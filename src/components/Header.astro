---
// src/components/Header.astro

import { Image } from 'astro:assets';
import logoImage from '../assets/images/elements/SVG/LOGO-COREFIBRA-CABECALHO.svg';
import iconeSeta from '../assets/images/elements/SVG/SETA-VERDE.svg';

const links = [
  { href: "#home", label: "Home" },
  { href: "#servicos", label: "Serviços" },
  { href: "#sobre", label: "Sobre" },
  { href: "#contato", label: "Contato" },
];
---

<header class="header">
    <div class="inner">
        <a href="/" class="logo-link">
            <Image
                src={logoImage}
                alt="Logo Core Fibra"
                width={200}
                height={20}
                class="logo-image"
            />
        </a>

        <nav class="nav">
            {links.map(link => (
                <a href={link.href} class="nav-link">{link.label}</a>
            ))}
        </nav>
        
        <button class="cta-button custom-font">
            FALE COM UM ESPECIALISTA
            <Image 
                src={iconeSeta} 
                alt="Ícone de seta" 
                width={20}
                height={20}
                class="cta-icon" 
            />
        </button>
    </div>
</header>

<style>
/* Fonte personalizada (assumindo que está no layout global) */
.custom-font {
    font-family: 'Big Shoulders', sans-serif; 
}

/* Base do Header */
.header {
    height: 80px;
    background-color: #b4e01e;
    border-bottom: 1px solid #E5E7EB; /* cinza claro */
    color: #2e2c31; /* Cor do texto padrão */
}

/* Container interno com espaçamento */
.inner {
    height: 100%; /* Ocupa toda a altura do header */
    max-width: 80rem; /* ~1280px */
    margin: 0 auto;
    padding: 0 1rem; /* Espaçamento lateral */

    display: flex;
    justify-content: space-around; /* Distribui o espaço */
    align-items: center;
}

/* Logo */
.logo-image {
    margin-left: -60px;
    height: 2rem; /* ~20px */
    width: auto;
    display: block; /* Remove espaço extra abaixo da imagem */
}

/* Navegação e Links */
.nav {
    display: flex;
    align-items: center;
    gap: 1.6rem; /* Espaço entre os links */
}

.nav-link {
    font-size: 1.125rem; /* ~18px */
    font-weight: 700;
    text-decoration: none;
    color: inherit; /* Herda a cor do .header */
    padding: 0.2rem;
    transition: all 0.3s ease; /* Transição suave */
}

.nav-link:hover {
    cursor: pointer;
    text-decoration: underline;
}

/* Botão de Ação (CTA) */
.cta-button {
    margin-right: -60px;
    background-color: #121c2d;
    color: white;
    border: none;
    cursor: pointer;
    
    display: flex;
    align-items: center;
    gap: 0.8rem; /* Espaço entre texto e ícone */
    
    border-radius: 9999px; /* Totalmente arredondado */
    padding: 0.4rem 1.1rem; /* Padding vertical e horizontal */
    font-size: 1.15rem; /* ~14px */
    font-weight: 700;
    
    white-space: nowrap; /* Impede que o texto quebre a linha */
    transition: background-color 0.3s ease;
}

.cta-button:hover {
    background-color: #1a2b46; /* Tom mais claro no hover */
}

.cta-icon {
    width: 1.3rem; /* ~20px */
    height: auto;
}

/* --- Media Queries para Responsividade (Mobile-First) --- */

/* Telas de tablet e menores (esconde a logo) */
@media (max-width: 1024px) {
    .logo-link {
        display: none;
    }
    .inner {
       justify-content: space-between; /* Ajusta o espaço sem a logo */
    }
}

/* Telas de celular (esconde a navegação) */
@media (max-width: 768px) {
    .nav {
        gap: 0.3rem;
        
    }

    .nav-link {
        font-size: 1rem; 
    }

    .cta-button {
        padding: 0.6rem 1rem;
        font-size: 0.8rem;
        gap: 0.5rem;
    }

    .cta-icon {
        width: 0.8rem; /* ~20px */
        height: auto;
    }
}

</style>